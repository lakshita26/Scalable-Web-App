  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"username\": \"johndoe\",\n  \"password\": \"password123\",\n  \"full_name\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/signup",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "username",
                  "value": "user@example.com"
                },
                {
                  "key": "password",
                  "value": "password123"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8000/api/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "login"]
            }
          }
        }
      ]
    },
